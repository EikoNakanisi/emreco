<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="hospitalization_field">
    <%= f.label :hospitalization, '入院日' %>
    <%= f.date_select(:hospitalization,
    start_year: 2018,
    end_year:   (Time.now.year - 19),
    default:    Date.new(2018, 1,15)) %>
  </div>

  <div class="field">
    <%= f.label :roomno, '部屋番号' %><br>
    <%= f.select :roomno, User.roomnos.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="birth_date_field">
    <%= f.label :birthday, '生年月日' %>
    <%= f.date_select(:birthday,
    start_year: 1910,
    end_year:   (Time.now.year - 18),
    default:    Date.new(1989, 1, 1)) %>
  </div>

  <div class="form-group">
    <%= f.label :age, '年齢' %>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :gender, '性別' %>
    <%= f.select :gender, User.genders.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="field">
    <%= f.label :bloodtype, '血液型' %>
    <%= f.select :bloodtype, User.bloodtypes.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>
  
  <div class="form-group">
    <%= f.label :height, '身長' %>
    <%= f.text_field :height, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :weight, '体重' %>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :infection, '感染症' %>
    <%= f.select :infection, User.infections.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="field">
    <%= f.label :aid, '救護区分' %>
    <%= f.select :aid, User.aids.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
  </div>

  <div class="form-group">
    <%= f.label :attention, '注意事項' %>
    <%= f.text_area :attention, class: 'form-control', rows: 3 %>
  </div>
  
  <div class="form-group">
    <%= f.label :post, '掲示板' %>
    <%= f.text_area :post, class: 'form-control', rows: 3 %>
  </div>

    <%= f.submit '入力', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
