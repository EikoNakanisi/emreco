<h1>患者観察入力一覧</h1>
<p><%= @user.name %></p>
<div class="row">
<aside class="col-md-4">

<%= form_for(@observation) do |f| %>

    <div class="configday_field">
      <%= f.label :config_day, '入力設定日' %>
      <%= f.date_select(:config_day,
      start_year: 2018,
      end_year:   (Time.now.year - 18),
      default:    Date.new(2018, 1, 1)) %>
    </div>
<div class="form-group">
<label>心拍数/1/15 10:00/1/15 19:00/1/16 6:00</label><%= f.text_field :m_bp, class: 'form-control input-sm' %><%= f.text_field :l_bp, class: 'form-control input-sm' %><%= f.text_field :d_bp, class: 'form-control input-sm' %>
<label>心拍数/1/16 10:00/1/16 19:00/1/17 6:00</label><%= f.text_field :m_kt, class: 'form-control input-sm' %><%= f.text_field :l_kt, class: 'form-control input-sm' %><%= f.text_field :d_kt, class: 'form-control input-sm' %>
<label>非観血(収縮期)/1/15 10:00/1/15 19:00/1/16 6:00</label><%= f.text_field :m_p, class: 'form-control input-sm' %><%= f.text_field :l_p, class: 'form-control input-sm' %><%= f.text_field :d_p, class: 'form-control input-sm' %>
<label>非観血(収縮期)/1/16 10:00/1/16 19:00/1/17 6:00</label><%= f.text_field :m_r, class: 'form-control input-sm' %><%= f.text_field :l_r, class: 'form-control input-sm' %><%= f.text_field :d_r, class: 'form-control input-sm' %>
<label>非観血(拡張期)/1/15 10:00/1/15 19:00/1/16 6:00</label><%= f.text_field :m_o2root, class: 'form-control input-sm' %> <%= f.text_field :l_o2root, class: 'form-control input-sm' %> <%= f.text_field :d_o2root, class: 'form-control input-sm' %> 
<label>非観血(拡張期)/1/16 10:00/1/16 19:00/1/17 6:00</label><%= f.text_field :m_o2rate, class: 'form-control input-sm' %> <%= f.text_field :l_o2rate, class: 'form-control input-sm' %> <%= f.text_field :d_o2rate, class: 'form-control input-sm' %>
<label>体温(表皮)/1/15 10:00/1/15 19:00/1/16 6:00</label><%= f.text_field :m_meal, class: 'form-control input-sm' %> <%= f.text_field :l_meal, class: 'form-control input-sm' %> <%= f.text_field :d_meal, class: 'form-control input-sm' %> 
<label>体温(表皮)/1/16 10:00/1/16 19:00/1/17 6:00</label><%= f.text_field :m_snack, class: 'form-control input-sm' %> <%= f.text_field :l_snack, class: 'form-control input-sm' %> <%= f.text_field :d_snack, class: 'form-control input-sm' %> 
<label>呼吸数/1/15 10:00/1/15 19:00/1/16 6:00</label><%= f.text_field :m_spo2, class: 'form-control input-sm' %> <%= f.text_field :l_spo2, class: 'form-control input-sm' %> <%= f.text_field :d_spo2, class: 'form-control input-sm' %> 
<label>呼吸数/1/16 10:00/1/16 19:00/1/17 6:00</label><%= f.text_field :m_bs, class: 'form-control input-sm' %> <%= f.text_field :l_bs, class: 'form-control input-sm' %> <%= f.text_field :d_bs, class: 'form-control input-sm' %> 
</div>
        <%= hidden_field_tag :follow_id, @user.id %>
        <%= f.submit '入力', class: 'btn btn-primary btn-xs' %>
        <%= link_to '一覧に戻る',users_path, class: 'btn btn-primary btn-xs' %>
<% end %>
</aside>
</div>